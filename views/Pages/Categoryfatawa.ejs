  <script>
/* ---------- Guard against edit modes ---------- */
try { document.designMode = 'off'; } catch (e) {}
document.body.setAttribute('contenteditable', 'false');
document.querySelectorAll('input, textarea').forEach(el => el.spellcheck = false);

/* ---------- DOM ---------- */
const listEl = document.getElementById('list');
const searchInput = document.getElementById('searchInput');
const loader = document.getElementById('loader');
const inlineLoader = document.getElementById('inlineLoader');
const loadMoreBtn = document.getElementById('loadMoreBtn');
const tagDropdown = document.getElementById('tagDropdown');
const activeTagWrap = document.getElementById('activeTagWrap');
const activeTagNameEl = document.getElementById('activeTagName');
const clearTagBtn = document.getElementById('clearTagBtn');

/* ---------- Vars ---------- */
let fatawaData = [];
let offset = 0;
const limit = 50;
let isLoading = false;
let allLoaded = false;

/* Tag handling */
let selectedTagName = '';        // Urdu display name (used inside f.tags)
let initialTagSlug = '';         // slug from ?tag=
let tagsIndexBySlug = new Map(); // slug -> Name
let tagsIndexByName = new Map(); // Name -> slug

/* ---------- Helpers ---------- */
function norm(v){ return (v ?? '').toString().trim(); }
function getParam(name){ return new URLSearchParams(location.search).get(name) || ''; }

/* ---------- Sanitize HTML from Quill / unsafe input ---------- */
function sanitizeHtml(unsafeHtml) {
  if (!unsafeHtml) return '';
  const tpl = document.createElement('template');
  tpl.innerHTML = unsafeHtml;
  tpl.content.querySelectorAll('script,style').forEach(n => n.remove());
  tpl.content.querySelectorAll('[contenteditable]').forEach(n => n.removeAttribute('contenteditable'));
  tpl.content.querySelectorAll('*').forEach(el => {
    const attrs = Array.from(el.attributes || []);
    attrs.forEach(attr => {
      const name = attr.name.toLowerCase();
      const val = String(attr.value || '').toLowerCase();
      if (name.startsWith('on')) el.removeAttribute(attr.name);
      else if (val.includes('javascript:')) el.removeAttribute(attr.name);
    });
  });
  const wrapper = tpl.content.querySelector('.ql-editor');
  return wrapper ? wrapper.innerHTML : tpl.innerHTML;
}

/* ---------- Safe text escape ---------- */
function escapeText(s) {
  if (s === null || s === undefined) return '';
  return String(s)
    .replaceAll('&', '&amp;')
    .replaceAll('<', '&lt;')
    .replaceAll('>', '&gt;')
    .replaceAll('"', '&quot;')
    .replaceAll("'", '&#039;');
}

/* ---------- Sorting (Views desc, then Title) ---------- */
function sortFatawa(arr){
  return arr.slice().sort((a,b)=>{
    const av = Number(a.Views || 0);
    const bv = Number(b.Views || 0);
    if (bv !== av) return bv - av;
    const at = norm(a.Title).toLowerCase();
    const bt = norm(b.Title).toLowerCase();
    return at.localeCompare(bt, 'ur');
  });
}

/* ---------- Fetch tags (build slug<->name map) ---------- */
async function fetchTagsIndex(){
  try{
    const res = await fetch('https://api.masailworld.com/api/tags?limit=148', { headers: { 'Accept':'application/json' }});
    const json = await res.json();
    const tags = Array.isArray(json) ? json
               : Array.isArray(json?.data) ? json.data
               : Array.isArray(json?.items) ? json.items
               : Array.isArray(json?.tags) ? json.tags
               : [];
    tagsIndexBySlug.clear();
    tagsIndexByName.clear();
    tags.forEach(t=>{
      const name = norm(t.Name);
      const slug = norm(t.slug);
      if (slug) tagsIndexBySlug.set(slug, name || slug);
      if (name) tagsIndexByName.set(name, slug || name);
    });
  }catch(e){
    console.warn('Tags index fetch failed; will fall back to name-only matching.', e);
  }
}

/* ---------- Populate tag dropdown (from loaded fatawa) ---------- */
function populateTagsFromFatawa() {
  const names = new Set();
  fatawaData.forEach(f=>{
    if (f.tags) {
      String(f.tags).split(',').forEach(t=>{ const n = norm(t); if(n) names.add(n); });
    }
  });
  const opts = ['<option value="">تمام ٹیگز</option>'];
  Array.from(names).sort((a,b)=>a.localeCompare(b,'ur')).forEach(n=>{
    const sel = (n === selectedTagName) ? ' selected' : '';
    opts.push(`<option value="${escapeText(n)}"${sel}>${escapeText(n)}</option>`);
  });
  tagDropdown.innerHTML = opts.join('');
}

/* ---------- Render list ---------- */
function renderList(data) {
  listEl.innerHTML = '';
  if (!data.length) {
    listEl.innerHTML = '<p class="text-center text-gray-600">کوئی فتاویٰ دستیاب نہیں۔</p>';
    return;
  }

  const sorted = sortFatawa(data);
  sorted.forEach((f, i) => {
    const idx = i + 1;
    const a = document.createElement('a');
    a.href = `/fatwa/${encodeURIComponent(f.id)}`;
    a.className = 'block bg-white p-6 rounded-2xl shadow-lg border border-gray-200 transition-all duration-200 card-link';
    a.setAttribute('contenteditable', 'false');

    const title = `<h3 class="text-xl font-semibold mb-2" contenteditable="false">${escapeText(f.Title || f.question || 'بلا عنوان')}</h3>`;
    const detail = sanitizeHtml(String(f.detailquestion || f.details || ''));

    a.innerHTML = `
      <div class="flex items-start">
        <div class="flex-shrink-0 w-14 h-14 ${ (idx % 2) ? 'bg-midnight_green' : 'bg-air_force_blue' } text-white rounded-xl flex items-center justify-center font-bold text-2xl ml-4">${idx}</div>
        <div class="flex-grow text-right">
          ${title}
          <div class="text-gray-700 line-clamp-2" contenteditable="false">${detail}</div>
          <div class="mt-4 flex justify-between items-center">
            <span class="text-green-700 font-bold">مکمل جواب پڑھیں ←</span>
            <div class="flex items-center text-gray-500 space-x-3 space-x-reverse">
              <span class="flex items-center"><i class="bi bi-eye-fill ml-1"></i> ${Number(f.Views || 0)}</span>
            </div>
          </div>
        </div>
      </div>
    `;
    listEl.appendChild(a);
  });
}

/* ---------- Filters ---------- */
function applyFilters() {
  const q = norm(searchInput.value).toLowerCase();

  const filtered = fatawaData.filter(f=>{
    const byTag = !selectedTagName
      ? true
      : (f.tags && (','+String(f.tags)+',').includes(','+selectedTagName+',')); // exact-ish contains

    const bySearch = !q ? true : (
      (f.Title && f.Title.toLowerCase().includes(q)) ||
      (f.detailquestion && f.detailquestion.toLowerCase().includes(q)) ||
      (f.details && f.details.toLowerCase().includes(q))
    );
    return byTag && bySearch;
  });

  renderList(filtered);

  // Active tag chip UI
  if (selectedTagName) {
    activeTagNameEl.textContent = selectedTagName;
    activeTagWrap.classList.remove('hidden');
  } else {
    activeTagWrap.classList.add('hidden');
  }
}

/* ---------- Fetch fatawa (paginated) ---------- */
async function fetchFatawa() {
  if (isLoading || allLoaded) return;
  isLoading = true;

  if (offset === 0) loader.style.display = 'flex';
  else { inlineLoader.classList.remove('hidden'); loadMoreBtn.disabled = true; }

  try {
    const res = await fetch(`https://api.masailworld.com/api/fatwa?limit=${limit}&offset=${offset}`);
    const chunk = await res.json();

    if (!Array.isArray(chunk) || chunk.length === 0) {
      allLoaded = true;
      loadMoreBtn.style.display = 'none';
    } else {
      fatawaData = fatawaData.concat(chunk);
      populateTagsFromFatawa();  // fill dropdown with names present in data
      applyFilters();
      offset += limit;
    }
  } catch (err) {
    console.error('Failed to fetch fatawa:', err);
    if (offset === 0) listEl.innerHTML = '<p class="text-center text-red-600">فتاویٰ لوڈ کرنے میں مسئلہ پیش آیا۔</p>';
  } finally {
    loader.style.display = 'none';
    inlineLoader.classList.add('hidden');
    loadMoreBtn.disabled = false;
    isLoading = false;
  }
}

/* ---------- Initial boot: read ?tag=, map slug->name, then load ---------- */
(async function init(){
  // 1) get ?tag={slug or name}
  initialTagSlug = decodeURIComponent(getParam('tag') || '').trim();

  // 2) build tags index to translate slug -> Name
  await fetchTagsIndex();

  // If URL had a tag, prefer resolving via slug; if not found, treat it as Name
  if (initialTagSlug) {
    const maybeName = tagsIndexBySlug.get(initialTagSlug);
    selectedTagName = maybeName || initialTagSlug; // fallback: use given value as Name
  }

  // 3) start loading data
  await fetchFatawa();

  // 4) if we have a selectedTagName and it exists in dropdown, select it
  if (selectedTagName) {
    // ensure dropdown shows the selected tag if present
    const options = Array.from(tagDropdown.options).map(o=>o.value);
    if (options.includes(selectedTagName)) {
      tagDropdown.value = selectedTagName;
    }
    applyFilters();
  }
})();

/* ---------- Events ---------- */
tagDropdown.addEventListener('change', e => {
  selectedTagName = norm(e.target.value);
  applyFilters();
});

searchInput.addEventListener('input', applyFilters);
loadMoreBtn.addEventListener('click', fetchFatawa);

clearTagBtn.addEventListener('click', () => {
  selectedTagName = '';
  tagDropdown.value = '';
  // also clear ?tag= from URL without reload
  const url = new URL(window.location.href);
  url.searchParams.delete('tag');
  window.history.replaceState({}, '', url.toString());
  applyFilters();
});

/* ---------- UX guard: prevent caret editing ---------- */
document.addEventListener('dblclick', function(e) {
  let el = e.target;
  while (el && el !== document.body) {
    if (el.classList && el.classList.contains('card-link')) {
      el.focus();
      e.preventDefault();
      return;
    }
    el = el.parentElement;
  }
}, true);
