  <!-- Script -->
  <script>
    function showLoader() {
      const loader = document.getElementById("loader");
      if (loader) loader.style.display = "flex";
    }
    function hideLoader() {
      const loader = document.getElementById("loader");
      if (loader) loader.style.display = "none";
    }

    // ✅ mini toast (non-blocking)
    function showToast(message) {
      const t = document.createElement('div');
      t.dir = 'rtl';
      t.textContent = message;
      t.className = 'fixed bottom-6 right-6 bg-rich_black text-beige text-sm md:text-base px-4 py-2 rounded-xl shadow-lg z-[60] opacity-0 transition-opacity';
      document.body.appendChild(t);
      requestAnimationFrame(() => t.classList.remove('opacity-0'));
      setTimeout(() => {
        t.classList.add('opacity-0');
        setTimeout(() => t.remove(), 300);
      }, 1800);
    }

    // ✅ Generic Share (kept)
    function copyShareLink() {
      const currentUrl = window.__MW__?.requestUrl || window.location.href;
      if (navigator.share) {
        navigator.share({
          title: document.title,
          text: "فتویٰ دیکھیں:",
          url: currentUrl
        }).catch(err => console.log("Share cancelled:", err));
      } else {
        const shareOptions = `
          <div style="padding:10px;">
            <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}">📘 Facebook</a><br>
            <a target="_blank" href="https://twitter.com/intent/tweet?url=${encodeURIComponent(currentUrl)}">🐦 Twitter</a><br>
            <a target="_blank" href="https://wa.me/?text=${encodeURIComponent(currentUrl)}">💬 WhatsApp</a><br>
            <a target="_blank" href="https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}">💼 LinkedIn</a>
          </div>
        `;
        const win = window.open("", "Share", "width=400,height=400");
        win.document.write(shareOptions);
      }
    }

    // 🔗 Share helpers for icon buttons
    function popupCenter(url, title) {
      const w=640,h=560;
      const dualScreenLeft = window.screenLeft !== undefined ? window.screenLeft : screen.left;
      const dualScreenTop  = window.screenTop  !== undefined ? window.screenTop  : screen.top;
      const width  = window.innerWidth || document.documentElement.clientWidth || screen.width;
      const height = window.innerHeight || document.documentElement.clientHeight || screen.height;
      const left = ((width / 2) - (w / 2)) + dualScreenLeft;
      const top  = ((height / 2) - (h / 2)) + dualScreenTop;
      const features = `scrollbars=yes,width=${w},height=${h},top=${top},left=${left}`;
      window.open(url, title, features);
    }
    function buildShareLinks(url, text) {
      const u = encodeURIComponent(url);
      const t = encodeURIComponent(text || document.title || 'مسائل ورلڈ');
      return {
        facebook: `https://www.facebook.com/sharer/sharer.php?u=${u}`,
        x:        `https://twitter.com/intent/tweet?url=${u}&text=${t}`,
        whatsapp: `https://wa.me/?text=${t}%20${u}`
      };
    }
    function wireSocialShareAnchorsInline() {
      const url = window.__MW__?.requestUrl || window.location.href;
      const links = buildShareLinks(url, document.title);
      const map = {
        "ah-fb": links.facebook,
        "ah-x":  links.x,
        "ah-wa": links.whatsapp
      };
      Object.keys(map).forEach(id => {
        const el = document.getElementById(id);
        if (!el) return;
        el.setAttribute('href', map[id]);
        el.addEventListener('click', (e) => {
          e.preventDefault();
          popupCenter(map[id], 'Share');
        });
      });
      const shareBtn = document.getElementById('ah-share');
      if (shareBtn) shareBtn.addEventListener('click', copyShareLink);
    }

    function detectDirection(text) {
      const urduRegex = /[\u0600-\u06FF]/;
      return urduRegex.test(text) ? 'rtl' : 'ltr';
    }

    function sanitizeHtml(unsafeHtml) {
      if (!unsafeHtml) return '';
      const tpl = document.createElement('template');
      tpl.innerHTML = unsafeHtml;
      tpl.content.querySelectorAll('script, style').forEach(n => n.remove());
      tpl.content.querySelectorAll('[contenteditable]').forEach(n => n.removeAttribute('contenteditable'));
      tpl.content.querySelectorAll('*').forEach(el => {
        Array.from(el.attributes).forEach(attr => {
          const n = attr.name.toLowerCase();
          const v = String(attr.value || '').toLowerCase();
          if (n.startsWith('on') || v.includes('javascript:')) el.removeAttribute(attr.name);
        });
      });
      const wrapper = tpl.content.querySelector('.ql-editor');
      return wrapper ? wrapper.innerHTML : tpl.innerHTML;
    }

    function escapeText(s) {
      if (s === null || s === undefined) return '';
      return String(s)
        .replaceAll('&', '&amp;')
        .replaceAll('<', '&lt;')
        .replaceAll('>', '&gt;')
        .replaceAll('"', '&quot;')
        .replaceAll("'", '&#039;');
    }

    // ---------------------------
    // 👁️ Views helpers
    // ---------------------------

    const API_BASE = (window.__MW__ && window.__MW__.API_BASE) ||
      ((location.hostname === 'localhost' || location.hostname === '127.0.0.1')
        ? 'https://dynamicmasailworld.onrender.com/api/fatwa'
        : 'https://dynamicmasailworld.onrender.com/api/fatwa');

    function sendViewOnceVisible(fatwaId) {
      const target = document.getElementById('fatwa-container');
      if (!target) return;

      let counted = false, timer = null;

      const fire = async () => {
        if (counted) return;
        counted = true;
        try {
          const res = await fetch(`https://dynamicmasailworld.onrender.com/api/fatwa/${encodeURIComponent(fatwaId)}/view`, {
            method: 'POST',
            credentials: 'include'
          });
          if (res.ok) {
            const data = await res.json().catch(() => ({}));
            if (data && data.counted) {
              const el = document.getElementById('viewCount');
              if (el) el.textContent = String((parseInt(el.textContent || '0', 10) || 0) + 1);
            }
          }
        } catch (_) { /* ignore */ }
      };

      if (!('IntersectionObserver' in window)) {
        setTimeout(fire, 3000);
        return;
      }

      const io = new IntersectionObserver(entries => {
        entries.forEach(e => {
          if (e.isIntersecting) {
            timer = setTimeout(fire, 3000); // visible for 3s
          } else if (timer) {
            clearTimeout(timer);
          }
        });
      }, { threshold: 0.5 });

      io.observe(target);
    }

    document.addEventListener("DOMContentLoaded", () => {
      // Prefer server-provided id (from /fatwa/:id). Fallback to query param (?id=...)
      const urlParams = new URLSearchParams(window.location.search);
      const fatwaId = (window.__MW__ && window.__MW__.fatwaId) || urlParams.get("id");

      const fatwaContainer = document.getElementById("fatwa-container");
      const latestContainer = document.getElementById("latest-fatwas");

      async function loadFatwaDetail() {
        showLoader();
        try {
          if (!fatwaId) throw new Error("ID موجود نہیں");
          const res = await fetch(`${API_BASE}/${encodeURIComponent(fatwaId)}`, { credentials: 'include' });
          if (!res.ok) throw new Error("Failed to fetch fatwa");
          const fatwa = await res.json();

          const titleHtml = `<h1 class="text-2xl md:text-4xl font-bold text-rich_black">${escapeText(fatwa.Title || 'بلا عنوان')}</h1>`;
          const metaHtml = `
            <p class="text-sm text-gray-500 mt-2">پوچھنے والا: ${escapeText(fatwa.questionername || 'نامعلوم')}</p>
            <p class="text-sm text-gray-500">دارالافتاء: ${escapeText(fatwa.muftisahab || 'نامعلوم')}</p>
            <div class="mt-3 flex items-center gap-4">
              <button onclick="copyShareLink()" class="flex items-center text-midnight_green hover:text-midnight_green-600 transition">
                <i class="bi bi-share-fill ml-2 text-black"></i> لنک شیئر کریں
              </button>
              <div class="flex items-center gap-4 text-lg text-gray-700">
                <span class="inline-flex items-center">
                  <i class="bi bi-eye ml-1"></i>
                  <span id="viewCount" class="mr-1">${parseInt(fatwa.Views || 0, 10) || 0}</span>
                </span>

                <!-- Inline social share icons -->
                <a id="ah-fb" href="#" class="hover:text-midnight_green transition-colors" aria-label="Facebook">
                  <i class="bi bi-facebook"></i>
                </a>
                <a id="ah-x" href="#" class="hover:text-midnight_green transition-colors" aria-label="X">
                  <i class="bi bi-twitter-x"></i>
                </a>
                <a id="ah-wa" href="#" class="hover:text-midnight_green transition-colors" aria-label="WhatsApp">
                  <i class="bi bi-whatsapp"></i>
                </a>
                <button type="button" id="ah-share" class="hover:text-midnight_green transition-colors" aria-label="مزید شیئر کریں">
                  <i class="bi bi-share-fill"></i>
                </button>
              </div>
            </div>
          `;

          const sanitizedQuestion = sanitizeHtml(String(fatwa.detailquestion || ''));
          const sanitizedAnswer = sanitizeHtml(String(fatwa.Answer || ''));

          fatwaContainer.innerHTML = `
            ${titleHtml}
            ${metaHtml}
            <div class="mt-6">
              <h2 class="text-xl md:text-2xl font-bold mb-3">سوال:</h2>
              <div id="fatwa-question" class="text-gray-700 text-lg md:text-xl leading-8 md:leading-9" dir="${detectDirection(fatwa.detailquestion || '')}">
                ${sanitizedQuestion}
              </div>
            </div>
            <div class="mt-6">
              <h2 class="text-xl md:text-2xl font-bold mb-3">جواب:</h2>
              <div id="fatwa-answer" class="text-gray-700 text-lg md:text-xl leading-8 md:leading-9" dir="${detectDirection(fatwa.Answer || '')}">
                ${sanitizedAnswer || 'جواب دستیاب نہیں ہے۔'}
              </div>
            </div>
          `;

          // Wire the inline share icons for this fatwa
          wireSocialShareAnchorsInline();

          // Count a view after visible ~3s
          sendViewOnceVisible(fatwaId);
        } catch (err) {
          console.error(err);
          fatwaContainer.innerHTML = `<p class="text-red-600">فتویٰ لوڈ کرنے میں مسئلہ ہوا: ${escapeText(err.message || '')}</p>`;
        } finally {
          hideLoader();
        }
      }

      async function loadLatestFatwas() {
        showLoader();
        try {
          const res = await fetch(`${API_BASE}`, { credentials: 'include' });
          if (!res.ok) throw new Error("Failed to fetch fatawa");
          const allFatawa = await res.json();
          const items = (Array.isArray(allFatawa) ? allFatawa : []).slice(0, 3);

          latestContainer.innerHTML = items.map(f => {
            const safeTitle = escapeText(f.Title || 'بلا عنوان');
            const safeDetailSanitized = sanitizeHtml(String(f.detailquestion || ''));
            const dirAttr = detectDirection(f.detailquestion || '');
            return `
              <div role="button" onclick="window.location.href='/fatwa/${encodeURIComponent(f.id)}'"
                class="cursor-pointer bg-beige rounded-2xl shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300 p-4">
                <h3 class="text-lg md:text-xl font-bold mb-2 text-rich_black">${safeTitle}</h3>
                <div class="text-gray-600 text-sm line-clamp-2" dir="${dirAttr}">${safeDetailSanitized}</div>
                <p class="text-midnight_green font-bold text-sm mt-2">مزید پڑھیں &larr;</p>
              </div>
            `;
          }).join("");
        } catch (err) {
          console.error(err);
          latestContainer.innerHTML = `<p class="text-red-600">فٹاویٰ لوڈ کرنے میں مسئلہ ہوا۔</p>`;
        } finally {
          hideLoader();
        }
      }

      if (fatwaId) {
        loadFatwaDetail();
        loadLatestFatwas();
      } else {
        fatwaContainer.innerHTML = `<p class="text-red-600">فتویٰ کی شناخت (ID) فراہم نہیں کی گئی۔</p>`;
        hideLoader();
      }
    });
  </script>
