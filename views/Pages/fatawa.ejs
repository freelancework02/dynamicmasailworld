  <script>
/* ---------- Guards against accidental edit modes ---------- */
try { document.designMode = 'off'; } catch (e) {}
document.body.setAttribute('contenteditable', 'false');
document.querySelectorAll('input, textarea').forEach(el => el.spellcheck = false);

/* ---------- DOM elements ---------- */
const listEl = document.getElementById('list');
const searchInput = document.getElementById('searchInput');
const loader = document.getElementById('loader');
const inlineLoader = document.getElementById('inlineLoader');

const sortMode = document.getElementById('sortMode');

const paginationEl = document.getElementById('pagination');
const pageNumbersEl = document.getElementById('pageNumbers');
const prevPageBtn = document.getElementById('prevPage');
const nextPageBtn = document.getElementById('nextPage');

/* Tag combobox bits */
const tagButton = document.getElementById('tagButton');
const tagButtonLabel = document.getElementById('tagButtonLabel');
const tagPanel = document.getElementById('tagPanel');
const tagSearchInput = document.getElementById('tagSearchInput');
const tagOptionsRoot = document.getElementById('tagOptions');

/* Server-configurable bases (do not affect UI) */
const API_BASE = (window.__MW__ && window.__MW__.FATWA_API_BASE) || 'https://dynamicmasailworld.onrender.com/api/fatwa';
const TAGS_API = (window.__MW__ && window.__MW__.FATWA_TAGS_API) || 'https://dynamicmasailworld.onrender.com/api/tags';
const DETAIL_BASE = (window.__MW__ && window.__MW__.FATWA_DETAIL_BASE) || '/fatwa';

/* ----------- NEW: same-origin view API for bumps ----------- */
const VIEW_API_BASE = 'https://masailworld.com/api/fatwa'; // avoid CORS/mixed-content

/* send a POST that survives navigation */
function bumpFatwaView(id) {
  if (!id) return;
  const url = `${VIEW_API_BASE}/${encodeURIComponent(id)}/view`;

  // Prefer sendBeacon (POST). Simple type => no CORS preflight.
  try {
    if (navigator.sendBeacon) {
      const blob = new Blob(['1'], { type: 'text/plain' });
      if (navigator.sendBeacon(url, blob)) return;
    }
  } catch {}

  // Fallback: fetch POST with keepalive
  try {
    fetch(url, {
      method: 'POST',
      keepalive: true,
      credentials: 'include',
      headers: { 'Content-Type': 'text/plain' },
      body: '1'
    }).catch(() => {});
  } catch {}
}

/* ---------- Variables ---------- */
let fatawaDataPages = [];   // array of pages, each page = items[]
let currentPage = 1;        // 1-based index
const pageSize = 20;
let isLoading = false;
let allLoaded = false;

let selectedTag = '';
let tagsCatalog = [];    // [{id, name, slug}]
let allTagOptions = [];  // [{value, label}]
const urCollator = new Intl.Collator('ur', { sensitivity: 'base' });

/* Urdu digits */
const urDigits = ['۰','۱','۲','۳','۴','۵','۶','۷','۸','۹'];
function toUrduNumber(n){
  return String(n).split('').map(ch => (/\d/.test(ch) ? urDigits[Number(ch)] : ch)).join('');
}

/* ---------- Sanitize HTML from Quill / unsafe input ---------- */
function sanitizeHtml(unsafeHtml) {
  if (!unsafeHtml) return '';
  const tpl = document.createElement('template');
  tpl.innerHTML = unsafeHtml;
  tpl.content.querySelectorAll('script,style').forEach(n => n.remove());
  tpl.content.querySelectorAll('[contenteditable]').forEach(n => n.removeAttribute('contenteditable'));
  tpl.content.querySelectorAll('*').forEach(el => {
    const attrs = Array.from(el.attributes || []);
    attrs.forEach(attr => {
      const name = attr.name.toLowerCase();
      const val = String(attr.value || '').toLowerCase();
      if (name.startsWith('on')) el.removeAttribute(attr.name);
      else if (val.includes('javascript:')) el.removeAttribute(attr.name);
    });
  });
  const wrapper = tpl.content.querySelector('.ql-editor');
  return wrapper ? wrapper.innerHTML : tpl.innerHTML;
}

/* ---------- Safe text escape for titles ---------- */
function escapeText(s) {
  if (s === null || s === undefined) return '';
  return String(s)
    .replaceAll('&', '&amp;')
    .replaceAll('<', '&lt;')
    .replaceAll('>', '&gt;')
    .replaceAll('"', '&quot;')
    .replaceAll("'", '&#039;');
}

/* ---------- Normalize tag field from fatawa ---------- */
function toTagArray(raw) {
  if (!raw) return [];
  if (Array.isArray(raw)) return raw.map(String).map(s => s.trim()).filter(Boolean);
  const s = String(raw).trim();
  if (!s) return [];
  if ((s.startsWith('[') && s.endsWith(']')) || (s.startsWith('"[') && s.endsWith(']"'))) {
    try {
      const parsed = JSON.parse(s);
      if (Array.isArray(parsed)) return parsed.map(String).map(v => v.trim()).filter(Boolean);
    } catch (_) {
      const inner = s.replace(/^"+|"+$/g, '').replace(/^\[|\]$/g, '');
      return inner.split(',').map(t => t.replace(/^"+|"+$/g,'').trim()).filter(Boolean);
    }
  }
  return s.split(',').map(t => t.trim()).filter(Boolean);
}

/* ---------- Fetch all tags for dropdown ---------- */
async function loadTags() {
  try {
    const res = await fetch(`${TAGS_API}?limit=148`);
    const payload = await res.json();
    const arr = Array.isArray(payload) ? payload : Array.isArray(payload?.data) ? payload.data : [];
    tagsCatalog = arr
      .map(t => ({
        id: t.id ?? t.ID ?? t.Id,
        name: (t.Name ?? t.name ?? '').trim(),
        slug: (t.slug ?? '').trim()
      }))
      .filter(t => t.name || t.slug)
      .sort((a, b) => urCollator.compare(a.name, b.name));

    allTagOptions = tagsCatalog.map(t => ({ value: t.slug || t.name, label: t.name }));
    renderTagOptions(allTagOptions);
  } catch (e) {
    console.error('Failed to load tags catalog:', e);
    renderTagOptions([]);
  }
}

/* ---------- Server fetch a page ---------- */
async function fetchServerPage(pageIndex1) {
  const offset = (pageIndex1 - 1) * pageSize;
  if (isLoading || (allLoaded && fatawaDataPages[pageIndex1-1])) return;

  isLoading = true;
  if (offset === 0 && loader) loader.style.display = 'flex';
  else { inlineLoader?.classList.remove('hidden'); }

  try {
    const params = new URLSearchParams({ limit: String(pageSize), offset: String(offset) });
    const url = `${API_BASE}?${params.toString()}`;
    const res = await fetch(url);
    const newData = await res.json();
    const items = Array.isArray(newData) ? newData : Array.isArray(newData?.data) ? newData.data : [];
    if (!items.length) {
      allLoaded = true;
      fatawaDataPages[pageIndex1-1] = [];
    } else {
      fatawaDataPages[pageIndex1-1] = items;
    }
  } catch (err) {
    console.error('Failed to fetch fatawa:', err);
    if (offset === 0) listEl.innerHTML = '<p class="text-center text-red-600">فتاویٰ لوڈ کرنے میں مسئلہ پیش آیا۔</p>';
  } finally {
    if (loader) loader.style.display = 'none';
    inlineLoader?.classList.add('hidden');
    isLoading = false;
  }
}

/* ---------- Build a flat filtered list from loaded pages ---------- */
function getAllLoadedItems() {
  const flat = [];
  for (let i = 0; i < fatawaDataPages.length; i++) {
    const pg = fatawaDataPages[i];
    if (Array.isArray(pg)) flat.push(...pg);
  }
  return flat;
}

/* ---------- Tag dropdown (combobox with search inside) ---------- */
function renderTagOptions(options) {
  const root = tagOptionsRoot;
  root.innerHTML = '';
  const base = options.length ? options : [];
  const frag = document.createDocumentFragment();
  base.forEach(opt => {
    const div = document.createElement('div');
    div.className = 'tag-option';
    div.textContent = opt.label;
    div.setAttribute('data-value', opt.value);
    if (opt.value === selectedTag) div.setAttribute('aria-selected', 'true');
    div.addEventListener('click', () => {
      selectedTag = opt.value;
      tagButtonLabel.textContent = opt.label || 'تمام ٹیگز';
      closeTagPanel();
      currentPage = 1;
      renderAndRemember();
    });
    frag.appendChild(div);
  });
  root.appendChild(frag);
}

function openTagPanel(){ tagPanel.classList.remove('hidden'); tagSearchInput.focus(); }
function closeTagPanel(){ tagPanel.classList.add('hidden'); tagSearchInput.value=''; filterTagOptions(''); }

function filterTagOptions(qRaw){
  const q = (qRaw||'').trim().toLowerCase();
  const base = allTagOptions.length ? allTagOptions : [];
  let filtered = base;
  if (q) {
    filtered = base.filter(o => o.label.toLowerCase().includes(q) || o.value.toLowerCase().includes(q));
    filtered.sort((a,b) => {
      const aL=a.label.toLowerCase(), bL=b.label.toLowerCase();
      const aS = aL.startsWith(q) ? 0 : 1;
      const bS = bL.startsWith(q) ? 0 : 1;
      if (aS!==bS) return aS-bS;
      return urCollator.compare(a.label, b.label);
    });
  } else {
    filtered = base.slice().sort((a,b) => urCollator.compare(a.label, b.label));
  }
  renderTagOptions(filtered);
}

/* open/close handling */
document.addEventListener('click', (e)=>{
  const box = document.getElementById('tagBox');
  if (!box.contains(e.target)) closeTagPanel();
});
tagButton.addEventListener('click', (e)=> {
  e.stopPropagation();
  if (tagPanel.classList.contains('hidden')) openTagPanel(); else closeTagPanel();
});
tagSearchInput.addEventListener('input', (e)=> filterTagOptions(e.target.value));
/* “All tags” quick option (first static row) */
tagPanel.querySelector('.tag-option[data-value=""]').addEventListener('click', () => {
  selectedTag = '';
  tagButtonLabel.textContent = 'تمام ٹیگز';
  closeTagPanel();
  currentPage = 1;
  renderAndRemember();
});

/* ---------- Filters ---------- */
function fatwaHasSelectedTag(fatwa, selected) {
  if (!selected) return true;
  const list = toTagArray(fatwa.tags).map(s => s.toLowerCase());
  const sel = selected.toLowerCase();
  const catalogMatch = tagsCatalog.find(t =>
    (t.slug && t.slug.toLowerCase() === sel) || (t.name && t.name.toLowerCase() === sel)
  );
  const acceptable = new Set([ sel, ...(catalogMatch ? [catalogMatch.name?.toLowerCase(), catalogMatch.slug?.toLowerCase()].filter(Boolean) : []) ]);
  return list.some(tagVal => acceptable.has(tagVal) || tagVal.includes(sel));
}

function applyFiltersTo(items){
  const q = searchInput.value.trim().toLowerCase();
  return items.filter(f => {
    const matchesTag = fatwaHasSelectedTag(f, selectedTag);
    const matchesSearch =
      !q ||
      (f.Title && String(f.Title).toLowerCase().includes(q)) ||
      (f.detailquestion && String(f.detailquestion).toLowerCase().includes(q)) ||
      (f.details && String(f.details).toLowerCase().includes(q));
    return matchesTag && matchesSearch;
  });
}

/* ---------- Render list (default or tag-grouped) ---------- */
function renderList(items) {
  listEl.innerHTML = '';
  if (!items.length) {
    listEl.innerHTML = '<p class="text-center text-gray-600">کوئی فتاویٰ دستیاب نہیں۔</p>';
    return;
  }

  const mode = sortMode.value;
  if (mode === 'tag') {
    const map = new Map();
    items.forEach(f => {
      const tags = toTagArray(f.tags);
      const key = (tags[0] || 'بلا ٹیگ');
      if (!map.has(key)) map.set(key, []);
      map.get(key).push(f);
    });

    const groups = Array.from(map.entries()).sort((a,b)=> urCollator.compare(a[0], b[0]));
    const frag = document.createDocumentFragment();
    let globalIndex = 0;
    groups.forEach(([tag, arr])=>{
      const h = document.createElement('div');
      h.className = 'group-header';
      h.textContent = tag;
      frag.appendChild(h);
      const div = document.createElement('div');
      div.className = 'divider';
      frag.appendChild(div);
      arr.sort((a,b)=> urCollator.compare(String(a.Title||a.question||''), String(b.Title||b.question||'')));
      arr.forEach((f, i) => {
        globalIndex++;
        frag.appendChild(buildCard(f, globalIndex));
      });
    });
    listEl.appendChild(frag);
    return;
  }

  const sorted = items.slice().sort((a,b)=> urCollator.compare(String(a.Title||a.question||''), String(b.Title||b.question||'')));
  const frag = document.createDocumentFragment();
  sorted.forEach((f, i) => frag.appendChild(buildCard(f, i+1)));
  listEl.appendChild(frag);
}

/* Build a detail link that goes to /fatwa/:id (no UI change) */
function makeDetailHref(id){
  const safeId = encodeURIComponent(String(id));
  return `${DETAIL_BASE}/${safeId}`;
}

function buildCard(f, idx){
  const a = document.createElement('a');
  a.href = makeDetailHref(f.id);
  a.className = 'block bg-white p-6 rounded-2xl shadow-lg border card-link';
  a.setAttribute('contenteditable', 'false');

  /* NEW: bump views on click (don’t block navigation) */
  a.addEventListener('click', () => {
    bumpFatwaView(f.id);
    // Let the browser follow the link normally.
  }, { passive: true });

  const title = `<h3 class="text-xl font-semibold mb-2" contenteditable="false">${escapeText(f.Title || f.question || 'بلا عنوان')}</h3>`;
  const detail = sanitizeHtml(String(f.detailquestion || f.details || ''));
  a.innerHTML = `
    <div class="flex items-start">
      <div class="flex-shrink-0 w-14 h-14 ${(idx % 2) ? 'bg-midnight_green' : 'bg-air_force_blue'} text-white rounded-2xl flex items-center justify-center font-bold text-2xl ml-4">${toUrduNumber(idx)}</div>
      <div class="flex-grow" style="text-align:right;">
        ${title}
        <div class="text-gray-700 line-clamp-2" contenteditable="false">${detail}</div>
        <div class="mt-4 flex justify-between items-center">
          <span class="text-green-700 font-bold">مکمل جواب پڑھیں ←</span>
          <div class="flex items-center text-gray-500" style="gap:12px;">
            <span class="flex items-center"><i class="bi bi-eye-fill" style="margin-left:6px;"></i> ${Number(f.Views || 0)}</span>
          </div>
        </div>
      </div>
    </div>`;
  return a;
}

/* ---------- Pagination UI ---------- */
function renderPagination(){
  prevPageBtn.disabled = (currentPage <= 1);
  const nextPageLoaded = fatawaDataPages[currentPage] !== undefined;
  const nextPageEmpty   = Array.isArray(fatawaDataPages[currentPage]) && fatawaDataPages[currentPage].length === 0;
  nextPageBtn.disabled = (nextPageLoaded && nextPageEmpty);

  pageNumbersEl.innerHTML = '';
  const totalKnownPages = fatawaDataPages.length || currentPage;
  for (let p=1; p<=totalKnownPages; p++){
    if (Array.isArray(fatawaDataPages[p-1]) && fatawaDataPages[p-1].length===0 && p>currentPage) break;
    const btn = document.createElement('button');
    btn.className = 'page-btn' + (p===currentPage ? ' active' : '');
    btn.textContent = toUrduNumber(p);
    btn.addEventListener('click', async () => {
      if (!fatawaDataPages[p-1]) { await fetchServerPage(p); }
      currentPage = p;
      renderAndRemember();
    });
    pageNumbersEl.appendChild(btn);
  }
}

prevPageBtn.addEventListener('click', async ()=>{
  if (currentPage<=1) return;
  currentPage -= 1;
  renderAndRemember();
});

nextPageBtn.addEventListener('click', async ()=>{
  const target = currentPage + 1;
  if (!fatawaDataPages[target-1]) {
    await fetchServerPage(target);
  }
  currentPage = target;
  renderAndRemember();
});

/* ---------- Render + remember order for detail page (kept) ---------- */
function renderAndRemember(){
  const ensure = async () => {
    if (!fatawaDataPages[currentPage-1]) {
      await fetchServerPage(currentPage);
    }
  };
  ensure().then(()=>{
    const flatUpToNow = getAllLoadedItems();
    const filtered = applyFiltersTo(flatUpToNow);

    let itemsForPage;
    if (sortMode.value === 'tag') {
      const map = new Map();
      filtered.forEach(f => {
        const tags = toTagArray(f.tags);
        const key = (tags[0] || 'بلا ٹیگ');
        if (!map.has(key)) map.set(key, []);
        map.get(key).push(f);
      });
      const groups = Array.from(map.entries()).sort((a,b)=> urCollator.compare(a[0], b[0]));
      const ordered = [];
      groups.forEach(([tag, arr])=>{
        arr.sort((a,b)=> urCollator.compare(String(a.Title||a.question||''), String(b.Title||b.question||'')));
        ordered.push(...arr);
      });
      itemsForPage = ordered.slice((currentPage-1)*pageSize, currentPage*pageSize);
      renderList(itemsForPage);
      localStorage.setItem('fatawaOrder', JSON.stringify(itemsForPage.map(x=>x.id)));
    } else {
      const sorted = filtered.slice().sort((a,b)=> urCollator.compare(String(a.Title||a.question||''), String(b.Title||b.question||'')));
      itemsForPage = sorted.slice((currentPage-1)*pageSize, currentPage*pageSize);
      renderList(itemsForPage);
      localStorage.setItem('fatawaOrder', JSON.stringify(itemsForPage.map(x=>x.id)));
    }

    const tinyMap = {};
    itemsForPage.forEach(item => { tinyMap[item.id] = item.Title || item.question || ''; });
    localStorage.setItem('fatawaTitleCache', JSON.stringify(tinyMap));

    renderPagination();
  });
}

/* ---------- Initial load ---------- */
searchInput.addEventListener('input', ()=>{ currentPage = 1; renderAndRemember(); });
sortMode.addEventListener('change', ()=>{ currentPage = 1; renderAndRemember(); });

loadTags().then(async ()=>{
  await fetchServerPage(1);
  renderAndRemember();
});

