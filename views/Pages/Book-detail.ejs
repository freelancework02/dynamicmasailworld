  <!-- Book Detail Section -->
  <main class="py-20 bg-beige-600 min-h-screen">
    <div class="container mx-auto px-6 max-w-5xl">
      <a href="/book" class="text-midnight_green hover:text-midnight_green-600 font-bold text-lg mb-8 inline-block">&rarr; واپس اسلامی کتب پر</a>

      <div id="book-detail" class="bg-white p-8 md:p-12 rounded-2xl shadow-lg border border-ash_gray">
        <%
          // ---------- Normalize + Quill cleanup ----------
          const title = b.BookName || b.title || b.Title || 'نامعلوم کتاب';
          const author = b.BookWriter || b.author || b.Author || (m && m.author) || 'ادارہ مسائل ورلڈ';
          const publisher = b.Publisher || b.publisher || '';
          const year = b.Year || b.year || b.PublicationYear || '';
          const language = b.Language || b.language || 'اردو';
          const pages = b.Pages || b.pages || '';

          const rawDescription =
            b.BookDescription || b.Description || b.Summary || (m && m.description) || '';

          function cleanQuill(html) {
            try {
              let s = String(html || '');

              // Remove the Quill tooltip entirely
              s = s.replace(/<div[^>]*class="[^"]*ql-tooltip[^"]*"[^>]*>[\s\S]*?<\/div>/gi, '');

              // Strip outer ql-editor wrapper, keep its inner HTML
              s = s.replace(/<div[^>]*class="[^"]*ql-editor[^"]*"[^>]*>/i, '');
              // Remove the trailing closing div if it matches the wrapper we removed
              s = s.replace(/<\/div>\s*$/i, '');

              // Remove Quill-specific attributes/classes if any leaked
              s = s
                .replace(/\scontenteditable="[^"]*"/gi, '')
                .replace(/\sbis_skin_checked="[^"]*"/gi, '')
                .replace(/\sclass="ql-align-center"/gi, ' style="text-align:center"');

              // If the result is plain text with no tags, wrap it
              if (!/<[a-z][\s\S]*>/i.test(s) && s.trim().length) {
                s = '<p>' + s.replace(/\n/g, '<br>') + '</p>';
              }

              return s.trim();
            } catch (e) {
              return String(html || '');
            }
          }

          const description = cleanQuill(rawDescription);

          const tagsRaw = b.tags || b.Tags || (m && m.tags) || '';
          const tags = Array.isArray(tagsRaw)
            ? tagsRaw
            : String(tagsRaw || '').split(',').map(t => t.trim()).filter(Boolean);

          const views = b.Views || b.views || b.ViewCount || b.viewCount || 0;
          const idVal = _id;
          const coverUrl = (m && m.image) ? m.image : (idVal ? ('/book/' + encodeURIComponent(idVal) + '/cover') : '');
          const pageUrl2 = (m && m.url) || '';
          const publishedLabel = (m && m.publishedDateLabel) || '';
        %>

        <!-- Top: Title + Views + Share -->
        <div class="flex flex-col md:flex-row md:items-start md:justify-between">
          <div class="mb-4 md:mb-0">
            <h1 class="text-3xl md:text-4xl font-bold text-midnight_green mb-2"><%= title %></h1>
