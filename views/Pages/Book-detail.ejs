                  <div class="font-bold text-lg"><%= publisher %></div>
                </div>
              <% } %>
              <% if (year) { %>
                <div class="p-4 bg-beige rounded-xl border border-ash_gray/50">
                  <div class="text-air_force_blue-700 text-sm mb-1">سالِ اشاعت</div>
                  <div class="font-bold text-lg"><%= year %></div>
                </div>
              <% } %>
              <div class="p-4 bg-beige rounded-xl border border-ash_gray/50">
                <div class="text-air_force_blue-700 text-sm mb-1">زبان</div>
                <div class="font-bold text-lg"><%= language %></div>
              </div>
              <% if (pages) { %>
                <div class="p-4 bg-beige rounded-xl border border-ash_gray/50">
                  <div class="text-air_force_blue-700 text-sm mb-1">صفحات</div>
                  <div class="font-bold text-lg"><%= pages %></div>
                </div>
              <% } %>
            </div>

            <!-- Tags -->
            <% if (tags && tags.length) { %>
              <div class="mt-6">
                <div class="text-air_force_blue-700 mb-2">ٹیگز</div>
                <div class="flex flex-wrap gap-2">
                  <% tags.forEach(function(t){ %>
                    <span class="inline-block bg-white border border-ash_gray/60 rounded-full px-3 py-1 text-sm text-midnight_green"><%= t %></span>
                  <% }) %>
                </div>
              </div>
            <% } %>

            <!-- Description (render Quill HTML safely) -->
            <% if (description) { %>
              <div class="mt-8">
                <h2 class="text-2xl font-bold text-midnight_green mb-3">تعارف</h2>
                <div class="prose prose-sm sm:prose-base max-w-none leading-8 text-rich_black/90" dir="rtl">
                  <%- description %>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
