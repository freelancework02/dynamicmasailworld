              <span><i class="bi bi-person-circle ml-2"></i><%= author %></span>
              <% if (publisher) { %>
                <span class="hidden sm:inline"><i class="bi bi-building ml-2"></i><%= publisher %></span>
              <% } %>
              <% if (year) { %>
                <span class="hidden sm:inline"><i class="bi bi-calendar3 ml-2"></i><%= year %></span>
              <% } %>
              <span class="flex items-center"><i class="bi bi-eye ml-2"></i><span id="book-views"><%= views %></span></span>
              <% if (publishedLabel) { %>
                <span class="hidden sm:inline"><i class="bi bi-clock-history ml-2"></i><%= publishedLabel %></span>
              <% } %>
            </div>
          </div>

          <!-- Share Buttons -->
          <div class="flex items-center gap-3">
            <a class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-beige hover:bg-ash_gray transition"
               aria-label="WhatsApp"
               href="https://wa.me/?text=<%= encodeURIComponent(title + ' — ' + pageUrl2) %>" target="_blank" rel="noopener">
              <i class="bi bi-whatsapp text-xl text-midnight_green"></i>
            </a>
            <a class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-beige hover:bg-ash_gray transition"
               aria-label="Facebook"
               href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(pageUrl2) %>" target="_blank" rel="noopener">
              <i class="bi bi-facebook text-xl text-midnight_green"></i>
            </a>
